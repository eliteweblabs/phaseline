---
// Google Reviews Widget
// Displays Google Reviews for your business

import { fetchGoogleReviews } from '../../lib/google-reviews'

// Get from environment variables
const GOOGLE_PLACES_API_KEY = import.meta.env.GOOGLE_PLACES_API_KEY
const GOOGLE_PLACE_ID = import.meta.env.GOOGLE_PLACE_ID

// Props
type Props = {
  maxReviews?: number
  showRating?: boolean
  classes?: string
}

const { maxReviews = 5, showRating = true, classes = '' } = Astro.props

// Fetch reviews server-side
let placeDetails = null
if (GOOGLE_PLACES_API_KEY && GOOGLE_PLACE_ID) {
  placeDetails = await fetchGoogleReviews(GOOGLE_PLACE_ID, GOOGLE_PLACES_API_KEY)
}

const reviews = placeDetails?.reviews?.slice(0, maxReviews) || []
---

{placeDetails && (
  <div class={`google-reviews ${classes}`}>
    {showRating && (
      <div class="mb-8 text-center">
        <h3 class="text-2xl font-bold mb-2">{placeDetails.name}</h3>
        <div class="flex items-center justify-center gap-2">
          <div class="flex text-yellow-400">
            {Array.from({ length: 5 }).map((_, i) => (
              <svg
                class="w-6 h-6"
                fill={i < Math.floor(placeDetails.rating) ? 'currentColor' : 'none'}
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
                />
              </svg>
            ))}
          </div>
          <span class="text-xl font-semibold">{placeDetails.rating}</span>
          <span class="text-gray-500">({placeDetails.user_ratings_total} reviews)</span>
        </div>
      </div>
    )}

    <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
      {reviews.map((review) => (
        <div class="rounded-lg border border-gray-200 bg-white p-6 shadow-sm dark:border-gray-700 dark:bg-gray-800">
          <div class="mb-4 flex items-center gap-3">
            {review.profile_photo_url && (
              <img
                src={review.profile_photo_url}
                alt={review.author_name}
                class="h-12 w-12 rounded-full"
              />
            )}
            <div>
              <h4 class="font-semibold">{review.author_name}</h4>
              <div class="flex text-yellow-400">
                {Array.from({ length: 5 }).map((_, i) => (
                  <svg
                    class="w-4 h-4"
                    fill={i < review.rating ? 'currentColor' : 'none'}
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"
                    />
                  </svg>
                ))}
              </div>
            </div>
          </div>
          <p class="text-gray-700 dark:text-gray-300">{review.text}</p>
          <p class="mt-3 text-sm text-gray-500">{review.relative_time_description}</p>
        </div>
      ))}
    </div>

    {!placeDetails && (
      <div class="text-center text-gray-500">
        <p>Google Reviews not configured. Add GOOGLE_PLACES_API_KEY and GOOGLE_PLACE_ID to your environment variables.</p>
      </div>
    )}
  </div>
)}


