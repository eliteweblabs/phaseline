---
// Badge
// ------------
// Description: Visual indicator badge to highlight UI elements.
// Properties:
// - Name: text content of the badge
// - Link: optional URL to wrap the badge
// - Type: badge style type (neutral, primary)
// - Size: badge size (e.g. base, sm)
// - Classes: additional CSS classes

// Content
// - Props
type Props = {
	size?: string
	name: string
	link?: string
	type?: string
	classes?: string
}
const { name, link, type = 'neutral', size = 'base', classes } = Astro.props
---

{
	link ? (
		<a
			href={link}
			class:list={[
				'badge',
				{ [`${classes}`]: classes },
				{ [`badge--${type}`]: type },
				{ [`badge--${size}`]: size }
			]}
		>
			{name}
		</a>
	) : (
		<span
			class:list={[
				'badge',
				{ [`${classes}`]: classes },
				{ [`badge--${type}`]: type },
				{ [`badge--${size}`]: size }
			]}
		>
			{name}
		</span>
	)
}

<style>
	@reference '../../styles/global.css';
	.badge {
		@apply inline-flex h-full items-center justify-center gap-1 rounded-sm px-1.5 py-1 text-sm transition-colors;
	}
	.badge--neutral {
		@apply bg-neutral-100 text-neutral-500 dark:bg-neutral-800 dark:text-neutral-500;
	}
	.badge--primary {
		@apply bg-primary-400/10 text-primary-500;
	}

	.badge--sm {
		@apply text-xs;
	}
</style>
