---
// About Page
// ------------
// Description: The about page is a page that displays information about the company.

// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - Blocks
import BasicHeroCTA from '../components/blocks/hero/BasicHeroCTA.astro'
import Video from '../components/blocks/video/VideoSection.astro'
import TeamIntro from '../components/blocks/team/TeamIntro.astro'
import Statistics from '../components/blocks/stats/Statistics.astro'
import TestimonialsBasic from '../components/blocks/testimonials/TestimonialsBasic.astro'
import BrandSlider from '../components/blocks/slider/BrandSlider.astro'

// Content
// - SEO
const SEO = {
	title: 'PhaseLine Painting | About us',
	description: 'About PhaseLine Painting - Professional painting services'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<BasicHeroCTA
		title="Professional team, quality results."
		text="PhaseLine Painting is a professional painting company with experienced painters who take pride in delivering quality work. We work closely with our clients, ensuring every detail is perfect and every project exceeds expectations. We believe the best results come from careful preparation, quality materials, and skilled craftsmanship. Collaborating directly with our clients to bring their vision to life. We're committed to excellence, reliable service, and transforming spaces with beautiful, lasting paint work."
		type="vertical"
		titleSpan="10"
		classes="pt-40! [&_h1]:max-w-[920px] lg:[&_p]:columns-2 [&_.card]:max-w-full!"
	/>
	<Video
		video="https://oxygenna-themes.b-cdn.net/Solid Builders-astro/videos/about-us-video.mp4"
		classes="pt-0!"
	/>
	<TeamIntro />
	<Statistics />
	<TestimonialsBasic sectionType="none" />
	<BrandSlider />
</Layout>
