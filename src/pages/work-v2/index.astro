---
// Work Page
// ------------
// Description: The work page is a page that displays all the work projects.

// Components
// - Layout
import Layout from '../../layouts/Layout.astro'
// - Blocks
import Hero from '../../components/blocks/hero/BasicHeroCTA.astro'
import ProjectHighlights from '../../components/blocks/work/ProjectHighlights.astro'
import Testimonials from '../../components/blocks/testimonials/TestimonialsAlt.astro'
import Statistics from '../../components/blocks/stats/Statistics.astro'
import Blog from '../../components/blocks/blog/PostsSlider.astro'

// - Collection
import { getCollection } from 'astro:content'

export async function getStaticPaths({ paginate }: any) {
	const allWorkProjects = await getCollection('work', ({ id }) => {
		return id
	})
	// Generate pages from our array of blog, with 6 to a page
	return paginate(allWorkProjects, { pageSize: 6 })
}
// All paginated data is passed on the "page" prop
const { page } = Astro.props as any

// Content
// - SEO
const SEO = {
	title: 'PhaseLine Painting | Our Work',
	description:
		"Explore PhaseLine Painting's latest painting projects showcasing quality craftsmanship, attention to detail, and beautiful transformations. See how we've helped transform spaces with professional painting services."
}
// Function to sort case studies by date
const sortedWorkProjects = page.data.sort((a: any, b: any) => {
	return new Date(b.data.pubDate).getTime() - new Date(a.data.pubDate).getTime()
})
---

<Layout title={SEO.title} description={SEO.description} navigation="sticky">
	<Hero
		title="What happens when it all clicks."
		text="From careful preparation to finished projects â€” here's what happens when quality materials, skilled craftsmanship, and attention to detail align."
		titleSpan="8"
		type="vertical"
	/>
	<Statistics />
	<ProjectHighlights
		data={sortedWorkProjects}
		{...page.lastPage === 1
			? {}
			: {
					pagination: {
						first: page.url.first,
						current: page.url.current,
						length: page.lastPage,
						prev: page.url.prev,
						next: page.url.next,
						last: page.url.last,
						size: page.size,
						total: page.total
					}
				}}
	/>
	<Testimonials />
	<Blog />
</Layout>
