---
// Home Page
// ------------
// Description: The home page is a page that displays the most important information.

// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - Blocks
import Hero from '../components/blocks/hero/MediaHeroCTA.astro'
import Statistics from '../components/blocks/stats/Statistics.astro'
import Services from '../components/blocks/services/ServicesBasic.astro'
import Slider from '../components/blocks/slider/BrandSlider.astro'
import Work from '../components/blocks/work/WorkBasic.astro'
import Testimonials from '../components/blocks/testimonials/TestimonialsAlt.astro'
import Blog from '../components/blocks/blog/PostCards.astro'

// Content
// - SEO
const SEO = {
	title: 'PhaseLine Painting | Professional Painting Services',
	description:
		'PhaseLine Painting is a professional painting company specializing in residential and commercial painting services with attention to detail and quality craftsmanship.'
}
// - Hero
const hero = {
	title: 'We paint like we mean it.',
	text: 'We don't do generic. We do painting that fits, transforms, and enhances your space — grounded in quality craftsmanship and made to last.'
}
// - Statistics
const statistics = {
	text: 'We're <strong>PhaseLine</strong> Painting — a professional team of painters that believe in quality work, attention to detail, and painting that actually transforms spaces. We help our clients turn their vision into reality'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={hero.title} text={hero.text} />
	<Statistics text={statistics.text} />
	<Services />
	<Slider />
	<Work />
	<Testimonials />
	<Blog />
</Layout>
