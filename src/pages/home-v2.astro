---
// Home Page
// ------------
// Description: The second variation of the home page

// Components
// - Layout
import Layout from '../layouts/Layout.astro'
// - Blocks
import Hero from '../components/blocks/hero/BasicHeroCTA.astro'
import Video from '../components/blocks/video/VideoSection.astro'
import Statistics from '../components/blocks/stats/Statistics.astro'
import Services from '../components/blocks/services/ServicesBasic.astro'
import BrandSlider from '../components/blocks/slider/BrandSlider.astro'
import Work from '../components/blocks/work/WorkBasic.astro'
import Testimonials from '../components/blocks/testimonials/TestimonialsBasic.astro'
import Blog from '../components/blocks/blog/PostsSlider.astro'

// Content
// - SEO
const SEO = {
	title: 'PhaseLine Painting | Professional Painting Services',
	description:
		'PhaseLine Painting is a professional painting company specializing in residential and commercial painting services with attention to detail and quality craftsmanship.'
}
// - Hero
const hero = {
	title: 'We paint spaces that transform',
	text: 'PhaseLine Painting is a professional painting company helping homeowners and businesses transform their spaces with quality craftsmanship and attention to detail.'
}
---

<Layout title={SEO.title} description={SEO.description}>
	<Hero title={hero.title} text={hero.text} />
	<Video />
	<Statistics />
	<Services />
	<BrandSlider />
	<Work />
	<Testimonials />
	<Blog />
</Layout>
